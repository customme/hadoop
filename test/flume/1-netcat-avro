# agt1
# mkdir -p /root/flume/log
# nohup flume-ng agent --conf $FLUME_HOME/conf -f /root/flume/1-netcat-avro -n agt1 -Dflume.root.logger=INFO,console > /root/flume/log/agt1.log 2>&1 &

agt1.sources = src1
agt1.channels = c1
agt1.sinks = sink1

# sources
agt1.sources.src1.type = netcat
agt1.sources.src1.bind = localhost
agt1.sources.src1.port = 11000
agt1.sources.src1.channels = c1

# channels
agt1.channels.c1.type = memory
agt1.channels.c1.capacity = 1000
agt1.channels.c1.transactionCapacity = 100

# sinks
agt1.sinks.sink1.type = avro
agt1.sinks.sink1.hostname = localhost
agt1.sinks.sink1.port = 11100
agt1.sinks.sink1.channel = c1
